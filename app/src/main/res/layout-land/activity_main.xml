<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sauna" />


            <TextView
                android:id="@id/tempSaunaCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="40.8"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/big_temperature_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivSaunaHeaterStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_heater_on" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Задано "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/setpoint_size" />

                    <TextView
                        android:id="@id/tempSaunaSetPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/setpoint_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Готово в "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/ready_time_size" />

                    <TextView
                        android:id="@id/tvSaunaReady"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21:35"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/ready_time_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_boiler" />

            <TextView
                android:id="@id/tempBoilerCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="32.5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/big_temperature_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivBoilerHeaterStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_heater_on" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Задано "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/setpoint_size" />

                    <TextView
                        android:id="@id/tempBoilerSetPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/setpoint_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Готово в "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/ready_time_size" />

                    <TextView
                        android:id="@id/tvBoilerReady"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21:35"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/ready_time_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_room" />

            <TextView
                android:id="@id/tempRoomCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="12.3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/big_temperature_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivRoomHeaterStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_heater_on" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Задано "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/setpoint_size" />

                    <TextView
                        android:id="@id/tempRoomSetPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/setpoint_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Готово в "
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/ready_time_size" />

                    <TextView
                        android:id="@id/tvRoomReady"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21:35"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/ready_time_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/mainSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="true"
            android:textOff="Выключено"
            android:textOn="Включено"
            android:thumb="@drawable/customswitchselector"
            android:track="@drawable/custom_track"
            android:layout_centerInParent="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_settings"
            android:onClick="onSetupClick"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_thermo"
            android:onClick="onSettingsClick"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Снаружи "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@id/tempOutdoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ввод воды "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@id/tempWaterpipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.4"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_horizontal|right"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tvLastSuccessfulQuery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="Данные на 12:43:11"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <FrameLayout
                android:layout_width="40dip"
                android:layout_height="40dip">

                <ImageView
                    android:id="@+id/ivConnectStatus"
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_connect" />

                <ProgressBar
                    android:id="@id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>